{
  "name": "@freakycoder/react-native-custom-text",
  "version": "0.1.2",
  "description": "Custom Text with cool heading & font family interaction for React Native.",
  "keywords": [
    "text",
    "custom",
    "font-family",
    "fontFamily",
    "heading",
    "view",
    "custom-text",
    "FreakyCoder",
    "freakycoder",
    "kuray",
    "Kuray",
    "react",
    "react-native",
    "javascript",
    "ui-lib",
    "rn"
  ],
  "homepage": "https://www.freakycoder.com",
  "bugs": "https://github.com/WrathChaos/react-native-custom-text/issues",
  "main": "./build/dist/RNText.js",
  "repository": "git@github.com:WrathChaos/react-native-custom-text.git",
  "author": "Kuray (FreakyCoder) <kurayogun@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cd lib && tsc && cp ../package.json ../build/dist/ && Echo Build completed!",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.0",
    "@types/react": "^19.0.8",
    "@types/react-native": "^0.73.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb": "^19.0.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.0",
    "react-native-typescript-transformer": "^1.2.13",
    "typescript": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.js --fix-dry-run"
    ]
  },
  "dependencies": {
    "tslib": "^2.1.0"
  }
}
